/* pages/course/course.wxss */
page{
  background-color: #fff;
}
.refresh-btn{
  width: 40rpx;
  height: 40rpx;
}
.week-list{
  position: fixed;
  z-index: 999;
  left: 0;
  width: 100%;
  height: 92rpx;
  display: flex;
  align-items: center;
  background: #f5f7f8;
}
.now-month{
  width: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: #666666;
}
.week-item{
  width: calc((100% - 60rpx) / 7);
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.week-item.active{
  background-color: var(--theme);
  border-radius: 20rpx;
  color: #fff;
}
.week-name{
  font-size: 24rpx;
  color: #444444;
}
.week-date{
  font-size: 20rpx;
  color: #a1a1a1;
}
.active .week-name,
.active .week-date{
  color: #fff;
}
.course-content{
  padding-top: 92rpx;
  width: 100%;
  display: flex;
}
.course-nums{
  width: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #f5f6f7;
}
.course-num{
  height: 120rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #444444;
}
.course-time{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #999999;
}
.course-list{
  height: 100%;
  width: 100%;
  position: relative;
}
.course-item{
  position: absolute;
  width: calc((100% - 60rpx) / 7);
}
.course-item_content{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  padding-top: 10rpx;
}
.course-item_fail{
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #444444;
  text-align: center;
  padding-top: 10rpx;
}
.switch-week_popup{
  padding: 30rpx;
}
.switch-week_title{
  text-align: center;
  font-size: 34rpx;
  font-weight: bolder;
}
.switch-week_list{
  display: flex;
  flex-wrap: wrap;
  margin-top: 30rpx;
}
.switch-week_item{
  width: 20%;
 padding: 20rpx;
}
.switch-week_item-box{
  width: 100%;
  height: 100rpx;
  background-color: #eee;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 12rpx;
}
.switch-week_item-box.active{
  background-color: var(--theme);
  color: #fff;
  font-size: 32rpx;
  font-weight: bolder;
}
.course-swpier{
  width: calc(100% - 60rpx);
  height: 1200rpx;
}