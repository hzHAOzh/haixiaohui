/* pages/attendance/attendance.wxss */
page{
  background: linear-gradient(
    0deg,
    rgba(161,140,209,0.20) 0%,
    rgba(251,194,235,0.20) 100%
  );
}
.container{
  padding: 30rpx;
}
.header{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
  padding: 0 40rpx ;
}
.header .picker{
  display: flex;
  width: 60%;
  height: 100%;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  font-size: 26rpx;
  background-color: #fff;
  box-shadow: 0px 0px 12px -2px rgba(0, 0, 0, 0.1);
}
.header .refresh{
  display: flex;
  height: 100%;
  width: 80rpx;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  font-size: 40rpx;
  color: #e065e0;
  background-color: #fff;
  box-shadow: 0px 0px 12px -2px rgba(0, 0, 0, 0.1);
}
.attendance-list{
  width: 100%;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 20rpx 30rpx 0 30rpx;
  box-shadow: 0px 0px 12px -2px rgba(0, 0, 0, 0.1);
}
.attendance-empty{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 20rpx 0;
  box-shadow: 0px 0px 12px -2px rgba(0, 0, 0, 0.1);
}
.attendance-empty image{
  margin-top: 40rpx;
  width: 450rpx;
  height: 250rpx;
}
.attendance-empty .empty-text{
  margin-top: 20rpx;
  font-size: 30rpx;
}
.term-name{
  font-size: 32rpx;
  color: #555555;
  text-align: center;
}
.attendance-item{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.attendance-item:not(:last-child){
  border-bottom: 1rpx solid #a1a1a1;
}
.item-left{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.attendance-reason{
  font-size: 32rpx;
  color: #444444;
}
.attendance-date{
  font-size: 24rpx;
  color: #a1a1a1;
}
.item-right{
  color: #a1a1a1;
}