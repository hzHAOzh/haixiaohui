/* pages/score/score.wxss */
page{
  background: linear-gradient(
    0deg,
    rgba(161,140,209,0.20) 0%,
    rgba(251,194,235,0.20) 100%
  );
}
.container{
  padding: 25rpx;
}
.header>view{
  height: 100rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.82);
  box-shadow: 0rpx 0rpx 10rpx -20rpx rgba(0, 0, 0, 0.05);
}
.header,.score-types{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.score-types{
  width: 312rpx;
  padding: 8rpx 16rpx;
  height: 100rpx;
}
.score-type{
  width: calc((100%-20rpx)/2);
  width: 130rpx;
  height: 70rpx;
  border-radius: 20rpx;
  background: rgba(230, 230, 230, 0.8);
  box-shadow: 0rpx 0rpx 10rpx -20rpx rgba(0, 0, 0, 0.05);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #3b3b3b;
}
.score-type.active{
  background-color: #e065e0;
  color: #fff;
}
.score-term{
  width: 176rpx;
  padding: 8rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #3b3b3b;
} 
.score-list{
  margin-top: 26rpx;
  width: 100%;
  border-radius: 20rpx;
  background: #FAFAFA;
  box-shadow: 0rpx 0rpx 10rpx -20rpx rgba(0, 0, 0, 0.05);
  padding: 20rpx;
}
.term-name{
  font-size: 32rpx;
  color: #555555;
  text-align: center;
}
.list{
  margin-top: 30rpx;
}
.score-item{
  display: flex;
  align-content: center;
  justify-content: space-between;
  min-height: 60rpx;
  margin-bottom: 20rpx;
}
.score-item:not(:last-child){
  border-bottom: 1rpx solid rgba(232, 224, 235, 0.5);
}
.course-name{
  font-size: 32rpx;
  color: #333333;
}
.course-score{
  display: flex;
  align-items: center;
  font-size: 32rpx; 
  color: #e065e0;
}
.course-score.fail{
  font-size: 32rpx;
  color: #9C9C9C;
}
.raw-score-content{
  font-size: 24rpx;
  font-weight: normal;
  color: #999999;
}
.update-btn{
  width: 100rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #e065e0;
}
.arrow {
  width: 29rpx;
  height: 17rpx;
  display: inline-block;
}