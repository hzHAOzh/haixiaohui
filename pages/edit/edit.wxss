/* pages/edit/edit.wxss */
page{
  background: #f6f8f9;
}
.header{
  margin-top: 3rpx;
  width: 100%;
  height: 300rpx;
  background-color: #fff;
  box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.avatar button{
  padding: 0rpx;
  width: 132prx;
  height: 132rpx;
  border-radius: 132rpx;
}
.avatar image{
  width: 132rpx;
  height: 132rpx;
}
.userId{
  margin-top: 30rpx;
  width: 200rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: rgba(225, 225, 225, 0.5);
  color: #a1a1a1;
  border-radius: 40rpx;
}
.edit-list{
  margin-top: 20rpx;
  width: 100%;
  background-color: #fff;
  padding: 10rpx 50rpx;
}
.list-item{
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.list-item input{
  font-size: 30rpx;
  color: #444444;
}
.item-title{
  margin-right: 50rpx;
  font-size: 30rpx;
}
.edit-confirm{
  width: 100%;
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.confirm-btn{
  width: 60%;
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
  font-size: 32rpx;
  color: var(--theme);
  background-color: #fff;
  box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
}