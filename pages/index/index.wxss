page{
  background-color: #fff;
}
.container{
  padding: 48rpx 20rpx;
}
.logo{
  width: 100%;
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.logo image{
  width: 420rpx;
  height: 260rpx;
}
.nav-list{
  width: 100%;
  height: 176rpx;
  border-radius: 24rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 14rpx 40rpx;
  margin-top: 46rpx;
}
.nav-item{
  display: flex;
  flex-direction: column;
  align-items: center;
  align-items: center;
}
.nav-item image{
  width: 96rpx;
  height: 96rpx;
}
.nav-title{
  font-size: 24rpx;
  color: #3d3d3d;
  margin-top: 4rpx;
}
.today-course{
  width: 100%;
  border-radius: 24rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
  margin-top: 30rpx;
  padding: 30rpx;
}
.course-option{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 70rpx;
}
.option-title{
  font-size: 40rpx;
  color: #3E9C96;
  font-weight: bolder;
}
.option-time{
  font-size: 24rpx;
  color: #666666;
}
.course-box{
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.course-box .empty-img{
  width: 264rpx;
  height: 138rpx;
}
.empty-title{
  font-size: 26rpx;
  color: #999999;
  margin-top: 50rpx;
}
.crouse-list{
  width: 100%;
}
.crouse-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}
.crouse-item:not(:last-child){
  border-bottom: 1px solid #f6f6f6;
}
.crouse-name{
  color: #3d3d3d;
}
.crouse-address{
  font-size: 24rpx;
  color: #838383;
}
.empty-course{
  padding: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}