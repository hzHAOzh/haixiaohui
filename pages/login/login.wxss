/* pages/login/login.wxss */
page{
  padding-top: 120rpx;
  background: rgba(250, 250, 250, 1);
}
.login{
  padding:64rpx;
  margin-top: 40rpx;
}
.login button{
  width: 100%;
  color: #fff;
  border-radius: 60rpx;
  background: linear-gradient(
      90deg,
     rgba(193,239,245,0.90) 0%,
      #0AE8F0 0%, #88F2DF 100%
  );
  box-shadow: 0rpx 0rpx 12rpx 0rpx rgba(0, 0, 0, 0.1);
}
.header{
  display: flex;
  justify-content: center;
  margin-top: 106rpx;
}
.header image{
  width: 420rpx;
  height: 260rpx;
}
.form-item{
  height: 98rpx;
  border-radius: 60rpx;
  background-color: rgba(255,255,255,1);
  border: 1rpx solid rgba(232, 232, 232, 0.86);
  box-shadow: 0rpx 0rpx 2prx -4prx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  margin-bottom: 48rpx;
}
.form-item van-icon{
  margin-right: 32rpx;
}
.checkbox-item{
  display: flex;
  align-items: center;
}
