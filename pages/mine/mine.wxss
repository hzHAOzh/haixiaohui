/* pages/mine/mine.wxss */
page{
  background: linear-gradient(
    180deg,
   rgba(8, 241, 230, 0.3) 0%, #fff 50%
);
}
.container{
  margin-top: 150rpx;
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.header{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header-left{
  width: 45%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.avatar image{
  width: 132rpx;
  height: 132rpx;
  border-radius: 132rpx;
  border: 1rpx solid #a1a1a1;
}
.left-info{
  margin-left: 20rpx;
}
.user-name{
  width: 500rpx;
  font-size: 34rpx;
  color: blue;
}
.user-id{
  font-size: 26rpx;
  color: #a1a1a1;
}
.mine-list{
  width: 100%;
  margin-top: 30rpx;
  border-radius: 24rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
  padding: 0 20rpx;
}
.list-item{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.remove-btn,.tologin-btn{
  width: 100%;
  padding: 20rpx 0;
  text-align: center;
  margin-top: 30rpx;
  border-radius: 24rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 24rpx -4rpx rgba(0, 0, 0, 0.1);
}
.remove-btn{
  color: red;
}
.tologin-btn{
  color: var(--theme);
}
.popImg{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.popImg image{
  width: 100%;
  height: 900rpx;
}